<h1>Books</h1>
<table>
<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
</thead>
	<% @books.each do |book| %>
	<tbody>
 	<tr>
 		<td><%= book.title %></td>
 		<td><%= book.body %></td>
 		<td><%= link_to "show", book_path(book) %></td>
 		<td><a href="/">edit</a></td>
 		<td><a href="/">destroy</a></td>
 	</tr>
 	</tbody>
 	<% end %>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<br><%= f.submit 'Create book' %>
<% end %>